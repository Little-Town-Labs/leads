# Database
DATABASE_URL=

# Clerk Authentication
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=
CLERK_SECRET_KEY=
CLERK_WEBHOOK_SECRET=
NEXT_PUBLIC_CLERK_SIGN_IN_URL=/sign-in
NEXT_PUBLIC_CLERK_SIGN_UP_URL=/sign-up
# Note: AFTER_SIGN_IN_URL is deprecated in Clerk components, use fallbackRedirectUrl instead
NEXT_PUBLIC_CLERK_AFTER_SIGN_IN_URL=/dashboard
NEXT_PUBLIC_CLERK_AFTER_SIGN_UP_URL=/dashboard

# Vercel AI Gateway API Key (https://vercel.com/ai-gateway)
AI_GATEWAY_API_KEY=

# AI Configuration (BYOK - Bring Your Own Key)
# ENCRYPTION_SECRET is required for encrypting customer API keys (64 hex chars or any string)
# Run: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))" to generate
ENCRYPTION_SECRET=

# OpenRouter API Key (https://openrouter.ai/)
# Platform default for free tier users. Gives access to 100+ models.
OPENROUTER_API_KEY=

# Slack Bot (https://github.com/vercel-partner-solutions/slack-agent-template/blob/main/README.md)
# if not set, the slack integration will be disabled by default
SLACK_BOT_TOKEN=
SLACK_SIGNING_SECRET=
SLACK_CHANNEL_ID=

# Exa API Key (https://exa.ai/)
EXA_API_KEY=